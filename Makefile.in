top_srcdir=@srcdir@
top_builddir=@builddir@
srcdir=@srcdir@
builddir=@builddir@

include $(top_builddir)/mk/init.mk

SUBDIRS = lang typelib tools bindings

.PHONY: build doc

build: recurse-build
install: recurse-install pkgconfig-install
clean: recurse-clean 
distclean: recurse-distclean
dep: recurse-dep

install: pkgconfig-install
pkgconfig-install:
	$(INSTALL_DIR)  $(libdir)/pkgconfig
	$(INSTALL_DATA) typelib.pc $(libdir)/pkgconfig

ifeq ($(HAVE_DOX), yes)
doc: Doxyfile
	$(DOXYGEN) Doxyfile
else
doc:
endif

include $(top_srcdir)/mk/recurse.mk
include $(top_srcdir)/mk/autotools-root.mk

