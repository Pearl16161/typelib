top_builddir=@top_builddir@
top_srcdir=@top_srcdir@

include Init.make

mkinstalldirs = $(SHELL) @srcdir@/mkinstalldirs

DISTNAME= @PACKAGE@-@VERSION@

SUBDIRS = typelib genotype tools 

all: pch
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d all || exit 2; \
	done

pch: $(PCH_FILE)

depend:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d depend ; \
	done

install:
	@for d in $(SUBDIRS) ; do \
		$(MAKE) -C $$d install ;\
	done

clean:
	@for d in $(SUBDIRS); do \
		$(MAKE) -C $$d clean ; \
	done
	rm -f $(PCH_FILE)

distclean:
	@for d in $(SUBDIRS); do \
		$(MAKE) -C $$d distclean ; \
	done
	rm -f src/pocolibs-config.h
	rm -f config.log config.status Init.make libtool Makefile 

DIST_COMMON = BUGS CHANGELOG Init.make.in Init.make.posix \
	Makefile.in README aclocal.m4 libtool.m4 pocolibs.m4 config.guess \
	config.sub configure configure.in ltmain.sh install-sh mkinstalldirs
DIST_SUBDIRS = include src 

DISTFILES = $(DIST_COMMON) $(DIST_SUBDIRS)

dist:
	-mkdir $(DISTNAME)
	(cd @srcdir@ ; gnutar cf - --exclude=CVS --exclude=.#* \
		$(DISTFILES)) | \
	( cd $(DISTNAME) ; tar xpf - )
	tar cf - $(DISTNAME) | gzip -c -9 > $(DISTNAME).tar.gz

sign:
	gpg -a --detach-sign $(DISTNAME).tar.gz

