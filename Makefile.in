top_srcdir=@srcdir@
top_builddir=@builddir@
srcdir=@srcdir@
builddir=@builddir@

include $(top_builddir)/mk/init.mk

SUBDIRS = lang typelib tools bindings

.PHONY: build doc

build: recurse-build
install: recurse-install pkgconfig-install
clean: recurse-clean 
distclean: recurse-distclean
dep: recurse-dep

CONFIG_OUTPUT_FILES=typelib.pc typelib-config.h

install: pkgconfig-install
pkgconfig-install:
	$(INSTALL_DIR)  $(DESTDIR)$(libdir)/pkgconfig
	$(INSTALL_DATA) typelib.pc $(DESTDIR)$(libdir)/pkgconfig

include $(top_srcdir)/mk/recurse.mk
include $(top_srcdir)/mk/autotools-root.mk
include $(top_srcdir)/mk/doxygen.mk

