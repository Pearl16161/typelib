top_srcdir=@srcdir@
top_builddir=@builddir@
srcdir=@srcdir@
builddir=@builddir@

include $(top_builddir)/Init.make

SUBDIRS = typelib tools

.PHONY: build doc

build: recurse-build
install: recurse-install
clean: recurse-clean 
distclean: recurse-distclean

ifeq ($(HAVE_DOX), yes)
doc: Doxyfile
	$(DOXYGEN) Doxyfile
else
doc:
endif

include $(top_srcdir)/mk/recurse.mk
include $(top_srcdir)/mk/autotools-root.mk

