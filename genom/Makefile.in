top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
builddir=	@builddir@

include $(top_builddir)/Init.make

INSTALL=	@INSTALL@

GENSRCS = CPPParser.cpp CPPLexer.cpp
SRCS = Support.cpp Dictionary.cpp LineObject.cpp Main.cpp typesolver.cpp type.cpp typebuilder.cpp $(GENSRCS)

OBJS=	$(SRCS:%.cpp=%.lo)

PROG=typesolver

all: $(PCH_DEP) all-os $(LIB) 

# libtool library
$(PROG): $(OBJS)
	$(LTLDCXX) -o $(PROG) $(CFLAGS) $(LDFLAGS) $(OBJS) \
	-L$(builddir)/../grammar -lgenom_grammar

%.lo: %.cpp 
	$(LTCXX) -c $(CFLAGS) $(CPPFLAGS) $(CXXFLAGS) -o $@ $<

clean: 
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(LIB) 

distclean: clean 
	rm -f DEPENDANCES Makefile

install:: $(LIB) 
	$(MKINSTALLDIRS) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(SRCS) 
	$(MKDEP) -c$(CXX) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

