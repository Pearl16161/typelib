top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
builddir=	@builddir@

include $(top_builddir)/Init.make
# -include $(srcdir)/os/$(OSAPI)/Makefile.inc

INSTALL=	@INSTALL@

CPPFLAGS += $(TYPELIB_CFLAGS) $(GENOTYPE_CFLAGS) $(CXXUTILS_CFLAGS) -I$(builddir)

SRCS = plugin.cpp genom.cpp inspect.cpp typelib.cpp preprocess.cpp
OBJS = $(SRCS:%.cpp=%.lo)

BIN = typelib

all: $(PCH_DEP) $(BIN)

$(BIN): $(OBJS)
	$(LTLDCXX) -o $@ $(OBJS) -rpath $(LIBDIR) -R$(LIBDIR) \
		$(TYPELIB_LIBS) $(GENOTYPE_LIBS) $(CXXUTILS_LIBS)

%.lo: %.cpp 
	$(LTCXX) -c $(CPPFLAGS) $(CXXFLAGS) -o $@ $<

clean: 
	$(LIBTOOL) --mode=clean rm -f \
						$(BIN) $(OBJS)

distclean: clean 
	rm -f DEPENDANCES Makefile

install:: $(LIB) 
	$(MKINSTALLDIRS) $(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(BIN) $(BINDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(SRCS)
	$(MKDEP) -c$(CXX) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif

