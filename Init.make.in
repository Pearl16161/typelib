prefix=         @prefix@
exec_prefix=    @exec_prefix@

host_cpu=	@host_cpu@

BINDIR=         @bindir@
LIBDIR=         @libdir@
DATADIR=        @datadir@
INCLUDEDIR=     @includedir@
MODULESDIR=     @libdir@

CC=             @CC@
CXX=            @CXX@
PURIFY=         @PURIFY@
MKDEP=          @MKDEP@

LIBTOOL=	@LIBTOOL@
LTCC=     $(LIBTOOL) --mode=compile $(CC)
LTCXX=    $(LIBTOOL) --mode=compile $(CXX)
LTLD=     $(LIBTOOL) --mode=link $(CC)
LTLDCXX=  $(LIBTOOL) --mode=link $(CXX)

CPPFLAGS=		-I$(srcdir) -D_POSIX_PTHREAD_SEMANTICS 
CFLAGS=		@CFLAGS@
CXXFLAGS= @CXXFLAGS@
LDFLAGS=	@LDFLAGS@

##################################################################
# Compiler flags and libraries

LIBXML_CFLAGS  = @LIBXML_CFLAGS@
LIBXML_LIBS    = @LIBXML_LIBS@

ANTLR_CFLAGS   = @ANTLR_CFLAGS@
ANTLR_LIBS     = @ANTLR_LIBS@

TYPELIB_CFLAGS = -I$(top_srcdir)/typelib $(LIBXML_CFLAGS)
TYPELIB_LIBS   = -L$(top_builddir)/typelib -ltypeLib

GENOTYPE_CFLAGS = -I$(top_srcdir)/genotype
GENOTYPE_LIBS   = -L$(top_builddir)/genotype -lgenoType

CXXUTILS_CFLAGS = -I/home/doudou/laas/dev/build/utils/include
CXXUTILS_LIBS   = -L/home/doudou/laas/dev/build/utils/lib -lcxxutils

##################################################################
# Programs

MKINSTALLDIRS=	$(top_srcdir)/mkinstalldirs
LN=		ln -s

##################################################################
# Precompiled header support (gcc-3.4)

USE_PCH=      @USE_PCH@
ifneq ($(USE_PCH),)
  PCH_HEADER=   @PCH_HEADER@
  PCH_FILE=     @abs_builddir@/$(PCH_HEADER).gch
  PCH_CFLAGS=   -include $(top_builddir)/$(PCH_HEADER)
  
  CXXFLAGS_NOPCH:= $(CXXFLAGS)
  CXXFLAGS +=   $(PCH_CFLAGS) -Winvalid-pch
  PCH_DEP=$(PCH_FILE)

  CPPFLAGS += $(ANTLR_CFLAGS)
else
  PCH_DEP=
endif

@abs_builddir@/%.h.gch: @abs_srcdir@/%.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS_NOPCH) -fPIC -DPIC -x c++ -c -o $@ $<

VPATH=$(srcdir)

