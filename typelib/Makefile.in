top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
builddir=	@builddir@

include $(top_builddir)/Init.make
# -include $(srcdir)/os/$(OSAPI)/Makefile.inc

INSTALL=	@INSTALL@

CPPFLAGS += $(LIBXML_CFLAGS)

LIB_SRCS = registry.cpp typebuilder.cpp type.cpp packing.cpp typename.cpp
INSPECT_SRCS = inspect.cpp

LIB_OBJS=		$(LIB_SRCS:%.cpp=%.lo)
INSPECT_OBJS=		$(INSPECT_SRCS:%.cpp=%.lo)

SHLIB_CURRENT=	0
SHLIB_REVISION=	0
SHLIB_AGE=			0

LIB=		    libtypeLib.la
INSPECT=    typelib-inspect

all: $(PCH_DEP) $(LIB) $(INSPECT)

# libtool library
$(LIB): $(LIB_OBJS) 
	$(LTLDCXX) -o $@ $(LIB_OBJS) -rpath $(LIBDIR) -R$(LIBDIR)	\
		-version-info $(SHLIB_CURRENT):$(SHLIB_REVISION):$(SHLIB_AGE) \
		$(LIBXML_LIBS)

$(INSPECT): $(LIB) $(INSPECT_OBJS)
	$(LTLDCXX) -o $@ $(INSPECT_OBJS) -rpath $(LIBDIR) -R$(LIBDIR)	\
	  $(TYPELIB_LIBS)

%.lo: %.cpp 
	$(LTCXX) -c $(CPPFLAGS) $(CXXFLAGS) -o $@ $<

clean: 
	$(LIBTOOL) --mode=clean rm -f $(LIB_OBJS) $(INSPECT_OBJS) $(LIB) $(INSPECT)

distclean: clean 
	rm -f DEPENDANCES Makefile

install:: $(LIB)  $(INSPECT)
	$(MKINSTALLDIRS) $(LIBDIR) $(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(INSPECT) $(BINDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(LIB_SRCS) $(INSPECT_SRCS)
	$(MKDEP) -c$(CXX) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif


