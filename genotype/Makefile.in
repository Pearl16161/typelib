top_builddir=	@top_builddir@
top_srcdir=	@top_srcdir@
srcdir=		@srcdir@
builddir=	@builddir@

include $(top_builddir)/Init.make
# -include $(srcdir)/os/$(OSAPI)/Makefile.inc

INSTALL=	@INSTALL@

CPPFLAGS += $(TYPELIB_CFLAGS) -I$(builddir)

SRCS = \
			 Dictionary.cpp Support.cpp preprocess.cpp genommodule.cpp genom-reader.cpp \
			 typesolver.cpp GenomParser.cpp GenomLexer.cpp CPPParser.cpp CPPLexer.cpp

ANTLR_GENOM_OUTPUT = genomparser \
				GenomLexerTokenTypes.hpp GenomLexerTokenTypes.txt \
				GenomParser.cpp GenomParser.hpp GenomLexer.cpp GenomLexer.hpp

ANTLR_STDC_OUTPUT = cparser \
				CPPParser.cpp CPPLexer.cpp CPPParser.hpp CPPLexer.hpp \
				CPPLexerTokenTypes.hpp CPPLexerTokenTypes.txt STDCTokenTypes.hpp STDCTokenTypes.txt

OBJS=		$(SRCS:%.cpp=%.lo)

SHLIB_CURRENT=	0
SHLIB_REVISION=	0
SHLIB_AGE=			0

BASENAME=	genoType
LIB=		lib$(BASENAME).la

all: $(PCH_DEP) $(LIB) 

# libtool library
$(LIB): cparser genomparser $(OBJS) 
	$(LTLDCXX) -o $@ $(OBJS) -rpath $(LIBDIR) -R$(LIBDIR)	\
		-version-info $(SHLIB_CURRENT):$(SHLIB_REVISION):$(SHLIB_AGE) \
		$(TYPELIB_LIBS)

%.lo: %.cpp 
	$(LTCXX) -c $(CPPFLAGS) $(CXXFLAGS) -o $@ $<

genomparser: genom.g STDCTokenTypes.txt
	cantlr -o $(builddir) $(srcdir)/genom.g
	touch genomparser

cparser: cparser.g
	cantlr -o $(builddir) $(srcdir)/cparser.g
	touch cparser

clean: 
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(LIB) $(ANTLR_GENOM_OUTPUT) $(ANTLR_STDC_OUTPUT)

distclean: clean 
	rm -f DEPENDANCES Makefile

install:: $(LIB) 
	$(MKINSTALLDIRS) $(LIBDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(LIB) $(LIBDIR)

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES:: $(SRCS) | cparser genomparser 
	$(MKDEP) -c$(CXX) -oDEPENDANCES -t.lo $(CPPFLAGS) $?

include DEPENDANCES
endif


